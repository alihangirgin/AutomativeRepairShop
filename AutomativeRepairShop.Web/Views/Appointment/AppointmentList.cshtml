@model IEnumerable<AutomativeRepairShop.Core.DTOs.AppointmentDto>

@{
    ViewData["Title"] = "AppointmentList";
}

<div class="row">
    <div class="col-md-2">
        <h4>Randevular</h4>
    </div>
    <div class="col-md-10">
        <button type="submit" onclick="location.href='@Url.Action("AddAppointment", "Appointment")'" class="btn btn-outline-primary">Randevu Ekle</button>
    </div>
</div>
<br>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isApproved)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isApproved)
                </td>
                <td>
                    <button type="submit" onclick="location.href='@Url.Action("UpdateAppointment", "Appointment", new { id = item.Id })'" class="btn btn-outline-info">Randevuyu Güncelle</button>
                    <button type="submit" onclick="location.href='@Url.Action("DeleteAppointment", "Appointment", new { id = item.Id })'" class="btn btn-outline-danger">Randevuyu Sil</button>
                    @if (item.isApproved == false)
                    {
                        <button type="submit" onclick="location.href='@Url.Action("ApproveAppointment", "Appointment", new { id = item.Id })'" class="btn btn-outline-success">Randevuyu Onayla</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
