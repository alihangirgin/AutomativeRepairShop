@model AutomativeRepairShop.Core.DTOs.WorkOrderWithoutAppointmentDto

@{
    ViewData["Title"] = "AddWorkOrder";
}


<h4>İş Emri Ekle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddWorkOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="Model.CustomerList"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class="form-control" asp-items="Model.VehicleList"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<input type="submit" value="Create" class="btn btn-primary" />*@
                <button type="submit" class="btn btn-outline-primary">İş Emri Ekle</button>
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="WorkOrderList">İş Emirlerine Dön</a>*@
    <button type="submit" onclick="location.href='@Url.Action("WorkOrderList", "WorkOrder")'" class="btn btn-outline-secondary">İş Emirlerine Dön</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
