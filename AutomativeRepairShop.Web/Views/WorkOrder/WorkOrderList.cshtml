@model IEnumerable<AutomativeRepairShop.Core.DTOs.WorkOrderDto>

@{
    ViewData["Title"] = "WorkOrderList";
}

<div class="row">
    <div class="col-md-2">
        <h4>İş Emirleri</h4>
    </div>
    <div class="col-md-10">
        <button type="submit" onclick="location.href='@Url.Action("AddWorkOrder", "WorkOrder")'" class="btn btn-outline-primary">İş Emri Ekle</button>
    </div>
</div>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleName)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td>
                @*@Html.ActionLink("İş Emrini Sil", "DeleteWorkOrder", new { id = item.Id })*@
                <button type="submit" onclick="location.href='@Url.Action("DeleteWorkOrder", "WorkOrder", new { id = item.Id })'" class="btn btn-outline-info">İş Emrini Sil</button>
            </td>
        </tr>
}
    </tbody>
</table>
